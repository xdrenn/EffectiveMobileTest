<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base myApplication theme. -->
    <style name="Theme.EffectiveMobileTest" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!--Text style-->
    <style name="SemiboldText">
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="RegularItalicText">
        <item name="android:fontFamily">@font/sf_pro_display_regular_italic</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_regular</item>
    </style>


    <style name="RegularText">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_regular</item>
    </style>

    <style name="ThinText">
        <item name="android:fontFamily">@font/sf_pro_display_thin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <!--Card style-->
    <style name="SearchCardStyle">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
    </style>

    <!--ShapeableImage style-->
    <style name="ShapeableImageStyle">
        <item name="cornerSize">10%</item>
    </style>

    <!--Button style-->
    <style name="ButtonAllTickets" parent="ThemeOverlay.Material3.Button">
        <item name="backgroundTint">@color/blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/RegularItalicText</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
    </style>
</resources>